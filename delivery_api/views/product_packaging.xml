<odoo>

    <record id="package_type_view_form" model="ir.ui.view">
        <field name="name">product.packaging</field>
        <field name="model">stock.package.type</field>
        <field name="inherit_id" ref="delivery.stock_package_type_form_delivery"/>
        <field name="arch" type="xml">

            <xpath expr="//group[@name='delivery']" position="inside">
                <group name="ship_api" string="Carrier Packaging" attrs="{'invisible': [('package_carrier_type', '!=', 'ship_api')]}">
                    <field name="freight_package_type"/>
                    <label for="variable_dimensions"/>
                    <div class="o_row" name="min_height">
                        <field name="variable_dimensions"/>
                        <span class="o_row" attrs="{'invisible': [('variable_dimensions', '=', False)]}">Min=<field name="min_height" style="width: auto !important;"/><field name="length_uom_name"/></span>
                        <span class="o_row" attrs="{'invisible': [('variable_dimensions', '=', False)]}">Max=<field name="height" style="width: auto !important;"/><field name="length_uom_name"/></span>
                    </div>
                    <field name="min_packing_ratio" widget="percentage"/>
                    <field name="max_packing_ratio" widget="percentage"/>
                    <label for="package_weight"/>
                    <div class="o_row" name="package_weight">
                      <field name="package_weight"/>
                      <span><field name="weight_uom_name"/></span>
                    </div>
                </group>
            </xpath>

        </field>
    </record>

</odoo>
